<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: options[:class].presence || "btn-outline-warning" %>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-success" %>
  <% end %>
<% end %>