<h3>検索結果</h3>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%=link_to user.nick_name, user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%=link_to post.title, post_path(post.id) %></td>
          <td><%= post.user.nick_name %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>