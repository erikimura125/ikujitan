<h1>投稿詳細</h1>
  <div>
    <%= image_tag @post.get_image %>
    <%= @post.title %>
    <%= @post.body %>
    <%= @post.user.nick_name %>
    <%= @post.created_at.strftime('%Y/%m/%d') %>
    <% if @post.user == current_user %>
      <%= link_to "編集", edit_post_path(@post.id) %>
      <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <% end %>
  </div>

